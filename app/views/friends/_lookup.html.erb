<h3>Search for Friends</h3>

<div id="friend-lookup"> 
    <%= form_tag search_friends_path, remote: true,  method: :get, id: "friend-lookup-form" do %>
        <div class="row form-group no-padding text-center">
        
            <div class="col-md-10"> 
                <%= text_field_tag :search, params[:search],
                placeholder: "Enter first name, last name  or email", 
                autofocus: true, 
                class: 'form-control search-box input-lg'
                %>                
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                    <%= fa_icon "search" %>
                    Search
                <% end %>
            </div>
        </div>
    
    <%end%>
</div> 
<div id="results">
    <%= render 'friends/result' %>
</div>
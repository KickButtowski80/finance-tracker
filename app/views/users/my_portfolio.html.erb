<h1>My Portfolio</h1>
<h3>Search for Stocks</h3>
<div id="stock-lookup"> 
    <%= form_tag search_stocks_path, remote: true,  method: :get, id: "stock-lookup-form" do %>
        <div class="row form-group no-padding text-center">
        
            <div class="col-md-10">
            <!-- :stock is the name of text_field and params[:stock] is the value -->
                <%= text_field_tag :stock, params[:stock],
                placeholder: "Stock ticker symbol", 
                autofocus: true, 
                class: 'form-control search-box input-lg'
                %>                
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                    <%= fa_icon "search" %>
                    look up a stock
                <% end %>
            </div>
        </div>
    
    <%end%>
</div> 
<div id="results">
    <%= render 'users/result' %>
</div> 
<%= render 'stocks/list' %>

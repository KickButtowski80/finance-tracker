<%= render 'friends/lookup' %>

<% if @friendships.size > 0  %>
  <table class="table table-stripped">
    <thead>
        <tr>
            <th colspan="3" class="page-header">
                <h2>My Friends</h2>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @friendships.each do |friend| %>
        <tr>
            <td> <%= friend.full_name%></td>
            <td> <%= friend.email%></td> 
            <td> <%= link_to "View Profile", user_path(friend), class: 'btn btn-primary btn-xs' %></td>
            <td>
            <%= link_to "unfriend" , user_path(friend),
                                       method: :delete,
                                       data: {confirm: "Are you sure you want to unfriend #{friend.full_name}?"},
                                       class: 'btn btn-danger'%>
              
            </td>
        </tr>      
        <% end %>
    
    </tbody>
</table>
<% else %> 
    <div class="row col-lg-12 col-md-12">
        <p class="lead">You don't have any friends yet. Please add some!</p>
    </div>
<% end %>